{
    "assistant": {
        "default_width": 300,
        "button": false,
        "enabled": false,
        "version": "2"
    },
    "extend_comment_on_newline": true,
    "session": {
        "restore_unsaved_buffers": true
    },
    "use_auto_surround": true,
    "git": {
        "git_gutter": "tracked_files",
        "gutter_debounce": null,
        "inline_blame": {
            "enabled": true,
            "show_commit_summary": false
        },
        "hunk_style": "staged_hollow"
    },
    "image_viewer": {
        "unit": "binary"
    },
    "relative_line_numbers": true,
    "message_editor": {
        "auto_replace_emoji_shortcode": true
    },
    "autosave": "on_focus_change",
    "buffer_font_family": "Cascadia Mono NF",
    "buffer_font_size": 22,
    "buffer_line_height": "standard",
    "chat_panel": {
        "default_width": 300,
        "button": "never"
    },
    "collaboration_panel": {
        "default_width": 300,
        "button": false
    },
    "cursor_blink": true,
    "diagnostics": {
        "inline": {
            "enabled": true,
            "update_debounce_ms": 150,
            "padding": 2,
            "min_column": 0,
            "max_severity": null
        },
        "include_warnings": true
    },
    "ensure_final_newline_on_save": false,
    "features": {
        "copilot": false,
        "edit_prediction_provider": "none"
    },
    "file_finder": {
        "modal_max_width": "medium"
    },
    "file_scan_inclusions": ["!node_modules", "!bower_components", "!target"],
    "format_on_save": "off",
    "formatter": "auto",
    "gutter": {
        "folds": false,
        "code_actions": false,
        "line_numbers": false,
        "runnables": false
    },
    "indent_guides": {
        "active_line_width": 2,
        "enabled": true,
        "line_width": 2
    },
    "code_actions_on_format": {
        "source.organizeImports": true
    },
    "languages": {
        "PHP": {
            "language_servers": ["intelephense", "!phpactor", "..."]
        }
    },
    "linked_edits": false,
    "lsp": {
        "intelephense": {
            "initialization_options": {
                "globalStoragePath": ".cache/intelephense"
            }
        }
    },
    "middle_click_paste": false,
    "notification_panel": {
        "default_width": 300,
        "button": false
    },
    "outline_panel": {
        "default_width": 300,
        "button": false
    },
    "preview_tabs": {
        "enabled": false
    },
    "project_panel": {
        "dock": "left",
        "auto_fold_dirs": false,
        "auto_reveal_entries": false,
        "default_width": 300,
        "entry_spacing": "standard"
    },
    "git_panel": {
        "status_style": "icon",
        "default_width": 300
    },
    "remove_trailing_whitespace_on_save": false,
    "restore_on_startup": "none",
    "scroll_beyond_last_line": "off",
    "scrollbar": {
        "axes": {
            "horizontal": false
        },
        "cursors": false,
        "selected_symbol": false,
        "show": "always"
    },
    "show_signature_help_after_edits": true,
    "show_user_picture": false,
    "show_whitespaces": "selection",
    "show_wrap_guides": false,
    "soft_wrap": "editor_width",
    "tab_bar": {
        "show_tab_bar_buttons": false,
        "show_nav_history_buttons": false,
        "show": false
    },
    "tab_size": 4,
    "telemetry": {
        "diagnostics": false,
        "metrics": false
    },
    "terminal": {
        "blinking": "on",
        "font_family": "Cascadia Code NF",
        "line_height": "standard",
        "detect_venv": {
            "on": {
                "directories": [".env", "env", ".venv", "venv"],
                "activate_script": "default"
            }
        },
        "toolbar": {
            "breadcrumbs": false
        }
    },
    "theme": "Yellowed",
    "toolbar": {
        "breadcrumbs": false,
        "quick_actions": false,
        "selections_menu": false
    },
    "ui_font_family": "Cascadia Code NF",
    "ui_font_size": 24,
    "unnecessary_code_fade": 0.7,
    "vertical_scroll_margin": 5,
    "when_closing_with_no_tabs": "keep_window_open",
    "vim_mode": true,
    "vim": {
        "use_system_clipboard": "always"
    }
}
