{
	"buffer_font_family": "MartianMono Nerd Font Mono",
	"ui_font_family": "MartianMono Nerd Font Mono",
	"buffer_font_size": 18,
	"ui_font_size": 18,

	"soft_wrap": "editor_width",
	"hard_tabs": true,
	"tab_size": 2,

	"scroll_beyond_last_line": "off",
	"vertical_scroll_margin": 5,
	"horizontal_scroll_margin": 0,

	"format_on_save": "on",
	"autosave": "on_focus_change",
	"restore_on_startup": "last_session",
	"when_closing_with_no_tabs": "keep_window_open",

	"auto_signature_help": true,
	"show_signature_help_after_edits": true,

	"git": {
		"inline_blame": {
			"enabled": false
		}
	},

	"indent_guides": {
		"enabled": true,
		"line_width": 2,
		"active_line_width": 2
	},

	"scrollbar": {
		"axes": {
			"horizontal": false
		}
	},

	"gutter": {
		"breakpoints": false,
		"folds": false,
		"line_numbers": false,
		"runnables": false
	},
	"title_bar": {
		"show_onboarding_banner": false,
		"show_sign_in": false,
		"show_user_picture": false
	},
	"project_panel": {
		"auto_fold_dirs": false,
		"hide_root": true
	},
	"tab_bar": {
		"show": false,
		"show_nav_history_buttons": false
	},
	"tabs": {
		"file_icons": true,
		"git_status": true
	},
	"preview_tabs": {
		"enabled": true,
		"enable_preview_from_file_finder": true,
		"enable_preview_from_code_navigation": true
	},

	"theme": {
		"dark": "Gruvbox Dark",
		"light": "Gruvbox Light",
		"mode": "system"
	},

	"telemetry": {
		"diagnostics": false,
		"metrics": false
	}
}
