{
	"buffer_font_family": "MartianMono Nerd Font Mono",
	"buffer_font_size": 18,
	"format_on_save": "on",
	"hard_tabs": true,
	"indent_guides": {
		"active_line_width": 2,
		"line_width": 2
	},
	"scroll_beyond_last_line": "off",
	"horizontal_scroll_margin": 0,
	"scrollbar": {
		"axes": {
			"horizontal": false
		}
	},
	"soft_wrap": "editor_width",
	"tab_size": 2,
	"telemetry": {
		"diagnostics": false,
		"metrics": false
	},
	"theme": {
		"dark": "Gruvbox Dark",
		"light": "Gruvbox Light",
		"mode": "system"
	},
	"project_panel": {
		"auto_fold_dirs": false
	},
	"ui_font_family": "MartianMono Nerd Font Mono",
	"ui_font_size": 18,
	"vertical_scroll_margin": 5
}
